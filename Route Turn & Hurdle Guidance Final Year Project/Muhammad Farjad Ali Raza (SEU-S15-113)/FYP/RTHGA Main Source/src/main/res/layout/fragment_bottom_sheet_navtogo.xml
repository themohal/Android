<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/botom_round_sh"

    android:id="@+id/startBottomsheet"

    >

    <EditText
        android:id="@+id/durationagain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:clickable="false"
        android:cursorVisible="false"
        android:editable="false"
        android:maxLines="1"
        android:text=""
        android:textColor="#23ae58"
        android:textSize="20sp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/distanceagain"
        android:editable="false"
        android:cursorVisible="false"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:clickable="false"
        android:background="#fff"
        android:freezesText="true"
        android:maxLines="1"
        android:text=""
        android:textColor="#115681"
        android:textSize="20sp"
        android:visibility="visible" />


    <Button

        android:id="@+id/startb"
        android:layout_width="120dp"
        android:layout_height="40dp"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="@color/colorPrimary"
        android:drawableLeft="@drawable/navigat"
        android:drawablePadding="-25dp"
        android:drawableTint="#fff"
        android:paddingLeft="25dp"
        android:text="Start"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#ffff" />

</RelativeLayout>