<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:background="#ff1e1f20"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="#ff1e1f20"
        >

        <ImageView
            android:id="@+id/setting_playlist_cover"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            />

        <TextView
            android:id="@+id/play_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="60dp"
            android:text="LINE ONE"
            android:textColor="#fff"
            android:textSize="15sp"
            android:freezesText="true"
            android:textAllCaps="false"
            android:fontFamily="Open Sans"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/play_list_song_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/play_list_name"
            android:layout_marginLeft="60dp"
            android:fontFamily="Open Sans"
            android:layout_marginTop="6dp"
            android:text="Line 2"
            android:freezesText="true"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:textSize="15sp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>